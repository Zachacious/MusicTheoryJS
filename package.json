{
  "name": "musictheoryjs",
  "version": "2.0.0",
  "description": "A music theory library",
  "source": "src/index.ts",
  "main": "dist/musictheory.js",
  "module": "dist/module.js",
  "types": "dist/musictheory.d.ts",
  "scripts": {
    "test": "run-s lint && jest --coverage --passWithNoTests",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "clean": "rimraf dist",
    "dev": "run-s clean build && livereload dist",
    "start": "run-p dev serve",
    "serve": "http-server ./ -o ./demo -d false",
    "build": "rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zachacious/MusicTheoryJS.git"
  },
  "keywords": [
    "music",
    "theory",
    "js",
    "note",
    "chord",
    "scale",
    "timbre"
  ],
  "author": "Zach Moore",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zachacious/MusicTheoryJS/issues"
  },
  "homepage": "https://github.com/Zachacious/MusicTheoryJS#readme",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "uid": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/jest": "^27.0.3",
    "jest": "^27.3.1",
    "livereload": "^0.9.3",
    "http-server": "^14.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-typescript2": "^0.31.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": ">=3.0.0"
  },
  "browserslist": [
    "last 10 Chrome versions",
    "last 10 Firefox versions",
    "last 4 Edge versions",
    "last 7 Safari versions",
    "last 8 Android versions",
    "last 8 ChromeAndroid versions",
    "last 8 FirefoxAndroid versions",
    "last 10 iOS versions",
    "last 5 Opera versions"
  ],
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!shiva/)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      },
      "google": {}
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.schema.ts",
      "!src/schema/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.ts",
      "<rootDir>/tests/**/?(*.)test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.js$": "babel-jest"
    }
  }
}
